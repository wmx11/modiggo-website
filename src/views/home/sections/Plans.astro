---
import Container from '../../../components/Container.astro';
import HaveQuestionsCard from '../../../components/HaveQuestionsCard.astro';
import Heading from '../../../components/Heading.astro';
import Section from '../../../components/Section.astro';
import PaymentPlans from '../../../components/svelte/PaymentPlans.svelte';

const paymentPlansContent = await Astro.glob(
  '../../../content/payment-plans/*.md'
);
---

<Section className="relative" id="partnership-plans">
  <Container>
    <Heading
      highlight={['Partnership']}
      position="center"
      title="Partnership Plans"
      subtitle="Choose the right plan for you. Pause or cancel anytime based on your workload."
    />
    <PaymentPlans client:visible paymentPlansContent={paymentPlansContent} />
    <HaveQuestionsCard />
  </Container>
</Section>
