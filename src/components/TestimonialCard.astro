---
interface Props {
  name: string;
  description: string;
  image?: string;
  href?: string;
  testimonial: string;
}

const { name, description, image, href, testimonial } = Astro.props;
---

<div
  class="card border-base-content/20 card-compact border text-left shadow-md shadow-white/5 transition-transform hover:scale-[1.01]"
>
  <div class="card-body">
    <a href={href} target="_blank">
      <div class="flex items-center gap-2">
        <div class="avatar w-[48px] h-[48px]">
          <img
            src={image}
            alt="Testimonial Image"
            class="rounded-full w-[48px] h-[48px]"
          />
        </div>
        <div class="flex flex-col items-start text-xs">
          <div class="text-base-content font-bold">{name}</div>
          <div class="text-base-content/60">
            {description}
          </div>
        </div>
      </div>
    </a>
    <p class="text-base-content">
      {testimonial}
    </p>
  </div>
</div>
