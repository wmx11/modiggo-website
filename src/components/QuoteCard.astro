---
import { twMerge } from 'tailwind-merge';
import AccentBlur from './AccentBlur.astro';
import Pattern from './Pattern.astro';
import Quote from './Quote.astro';
import { cva } from 'class-variance-authority';

interface Props {
  quote: string;
  author: string;
  className?: string;
  align?: 'center';
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const quoteCard = cva(
  'card relative overflow-hidden bg-primary items-center justify-center p-4',
  {
    variants: {
      size: {
        sm: ['h-[140px] mb-4'],
        md: ['h-[200px] mb-8'],
        lg: ['h-[280px] mb-12'],
        xl: ['h-[320px] mb-16'],
      },
    },
  }
);

const { quote, author, className, align, size = 'md' } = Astro.props;
---

<div class={quoteCard({ size })}>
  <Quote quote={quote} author={author} />
  <AccentBlur />
</div>
