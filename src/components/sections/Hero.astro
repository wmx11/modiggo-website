---
import { Image } from '@astrojs/image/components';
import HeroBackground from '../../assets/images/hero_background.png';
import Container from '../Container.astro';
import HeroWrapper from '../HeroWrapper.astro';
---

<section>
  <HeroWrapper>
    <Container className="text-white z-10">
      <div>
        <h1 class="mb-5 text-5xl sm:text-6xl md:text-8xl font-black animate">
          Your Digital Blacksmith
        </h1>
        <h2 class="mb-5 text-2xl animate">
          Subscription-based web development services for your business. Let's
          hammer out those red-hot ideas.
        </h2>
        <button
          class="btn btn-neutral btn-lg text-white animate"
          data-scroll-to="#partnership-plans">See Plans</button
        >
      </div>
    </Container>
    <Image
      src={HeroBackground}
      alt="Digital Blacksmith working in his shop"
      class="absolute w-full h-full inset-0 object-cover opacity-50 scale-x-[-1]"
      width={1920}
      height={1080}
    />
  </HeroWrapper>
</section>
