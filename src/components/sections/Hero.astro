---
import { Image } from 'astro:assets';
import ModiggoLogo from '../../assets/images/modiggo_logo.png';
import Container from '../Container.astro';
import HeroWrapper from '../HeroWrapper.astro';
import Pattern from '../Pattern.astro';
---

<section>
  <HeroWrapper>
    <Container className="text-white text-center z-10">
      <div class="flex justify-center">
        <div class="flex items-center gap-4 mb-2 absolute top-[64px]">
          <Image src={ModiggoLogo} alt="Modiggo Logo" height={50} width={50} />
          <span class="text-3xl font-bold">Modiggo</span>
        </div>
      </div>
      <div class="space-y-12">
        <h1
          class="text-5xl sm:text-6xl md:text-8xl font-black animate uppercase"
        >
          Your <span class="digital--text" data-content="Digital">Digital</span>
          Blacksmith
        </h1>
        <h2 class="text-2xl animate">
          Web development as a subscription. Let's hammer out those red-hot
          ideas.
        </h2>
        <button
          class="btn btn-primary btn-lg text-white animate"
          data-scroll-to="#partnership-plans">See Plans</button
        >
      </div>
    </Container>
    <!-- <Pattern /> -->
  </HeroWrapper>
  
</section>
