---
import Container from '../Container.astro';
import Pattern from '../Pattern.astro';
import { Image } from 'astro:assets';
import ModiggoLogo from '../../assets/images/modiggo_logo.svg';
import { Icon } from 'astro-icon';
---

<footer class="p-10 bg-black text-white min-h-[420px] relative">
  <Container className="footer z-10 relative">
    <div>
      <a href="/" class="flex items-center gap-4 mb-8">
        <img src={ModiggoLogo} alt="Modiggo Logo" height={50} width={50} />
        <span class="text-3xl font-bold">Modiggo</span>
      </a>
      <div>
        <span class="footer-title block">Social Media</span>
        <a
          href="https://twitter.com/modiggo"
          target="_blank"
          class="link link-hover flex items-center gap-2"
        >
          <Icon name="mdi:twitter" class="text-white w-6" />
          <span class="text-lg font-bold">Twitter</span>
        </a>
      </div>
    </div>
    <div>
      <span class="footer-title">Company</span>
      <a class="link link-hover" href="/free-websites">Free websites</a>
      <a class="link link-hover" href="/services">Additional services</a>
    </div>

    <div>
      <span class="footer-title">Navigation</span>
      <button class="link link-hover" data-scroll-to="#faq">FAQs</button>
      <button class="link link-hover" data-scroll-to="#scope-of-work"
        >Scope of Work</button
      >
      <button class="link link-hover" data-scroll-to="#partnership-plans"
        >Partnereship Plans</button
      >
    </div>
    <div>
      <span class="footer-title">Legal</span>
      <a class="link link-hover" href="/cookie-policy">Cookie policy</a>
      <a class="link link-hover" href="/privacy-policy">Privacy policy</a>
      <a class="link link-hover" href="/terms-of-services">Terms of services</a>
    </div>
  </Container>
  <Pattern />
</footer>
