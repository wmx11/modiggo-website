---
import styles from '../../utils/styles';
import Container from '../Container.astro';
import TextBlock from '../TextBlock.astro';

const benefits = [
  {
    iconName: 'mdi:email-fast',
    iconClassName: 'max-w-[35px] w-full',
    title: 'Subscribe & Request',
    description: 'Subscribe to a partnership plan and place your requests.',
  },
  {
    iconName: 'mdi:heart',
    iconClassName: 'max-w-[35px] w-full',
    title: 'Support & Refinement',
    description:
      'We will revise deliverables until youâ€™re happy with the results.',
  },
  {
    iconName: 'fa:dollar',
    iconClassName: 'max-w-[20px] w-full',
    title: 'No More Full-Time Commitment',
    description:
      'No more full-time hassles. Subscribe to a plan, pause, or cancel anytime.',
  },
];
---

<section class={styles.section}>
  <Container>
    <div class="mb-16 animate">
      <h1 class="text-5xl font-bold mb-5">Forging Digital Marvels</h1>
      <h2 class="mb-5 text-2xl">
        We mold your digital presence with precision and expertise. Let's hammer
        out those red-hot ideas.
      </h2>
    </div>

    <div class="flex flex-wrap items-center justify-between gap-16">
      {
        benefits?.map((item) => (
          <TextBlock
            className="md:basis-[calc(33.3%-64px)] animate"
            {...item}
          />
        ))
      }
    </div>
  </Container>
</section>
