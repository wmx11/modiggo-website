---
import Container from '../Container.astro';
import Heading from '../Heading.astro';
import QuoteCard from '../QuoteCard.astro';
import Section from '../Section.astro';
import TextBlock from '../TextBlock.astro';
import DomuFinancePage from '../../assets/images/domu-finance-page-sample.png';
import { Image } from 'astro:assets';

const benefits = await Astro.glob('../../content/benefits/*.md');
benefits.sort(
  (a, b) => a.frontmatter.title.length - b.frontmatter.title.length
);
---

<Section className="min-h-screen relative">
  <Container>
    <Heading
      title="Forging Digital Marvels"
      subtitle="We mold your digital presence with precision and expertise."
    />
    <div class="space-y-24">
      <div class="flex flex-wrap items-start justify-between gap-16">
        {
          benefits?.map((item) => (
            <TextBlock
              className="md:basis-[calc(33.3%-64px)] animate"
              {...item.frontmatter}
              description={item.compiledContent()}
            />
          ))
        }
      </div>

      <div class="flex flex-col md:flex-row gap-8">
        <div
          class="basis-[60%] flex flex-wrap gap-8 justify-center md:justify-start"
        >
          <div class="break-inside-avoid animate digital--box">
            <Image
              src={DomuFinancePage}
              alt="Domu Finance Page"
              width={400}
              height={400}
            />
          </div>
          <div class="break-inside-avoid animate digital--box">
            <Image
              src={DomuFinancePage}
              alt="Domu Finance Page"
              width={400}
              height={400}
            />
          </div>
          <div class="break-inside-avoid animate digital--box">
            <Image
              src={DomuFinancePage}
              alt="Domu Finance Page"
              width={400}
              height={400}
            />
          </div>
          <div class="break-inside-avoid animate digital--box">
            <Image
              src={DomuFinancePage}
              alt="Domu Finance Page"
              width={400}
              height={400}
            />
          </div>
        </div>
        <div class="basis-[40%] animate">
          <div class="sticky top-10">
            <QuoteCard quote="Test quote" author="Test Author 1" />
            <QuoteCard quote="Test quote" author="Test Author 2" />
            <QuoteCard quote="Test quote" author="Test Author 3" />
          </div>
        </div>
      </div>
    </div>
  </Container>
</Section>
