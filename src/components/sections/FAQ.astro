---
import styles from '../../utils/styles';
import Container from '../Container.astro';

const faq = await Astro.glob('../../content/faq/*.md');
const sortedFaq = faq
  .map((item) => ({ content: item, length: item?.frontmatter?.title?.length }))
  .sort((a, b) => a?.length - b?.length)
  .map((sorted) => sorted?.content);
---

<section class={styles.section} id="faq">
  <Container className="flex flex-col gap-2">
    <div class="text-black mb-16 animate">
      <h1 class="text-5xl font-bold mb-5">Frequently Asked Questions</h1>
      <h2 class="mb-5 text-2xl">Let's answer some of your questions.</h2>
    </div>
    <div>
      {
        sortedFaq?.map((item) => (
          <div class="collapse collapse-arrow border-b border-black mb-2">
            <input type="radio" name="accordion" />
            <div class="collapse-title text-xl font-medium">
              {item.frontmatter.title}
            </div>
            <div class="collapse-content prose prose-lg max-w-none">
              <p set:html={item.compiledContent()} />
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</section>
