---
import GlitchAnimation from './GlitchAnimation.astro';
---

<GlitchAnimation />

<style is:global lang="scss">
  :root {
    --border-radius: 4px;

    /* Colors */
    --primary: 244 54% 63%;
    --secondary: 317 80% 54%;
    --tertiary: 177 66% 69%;
    --black: 240 35% 7%;

    // Digital Shadows
    --top-shadow: 0px 3px 0px hsl(var(--primary));
    --left-shadow: -3px 0px 0px hsl(var(--secondary));
    --bottom-shadow: 3px 0px 0px hsl(var(--tertiary));
  }

  html,
  body {
    color: #fff;
    background: hsl(var(--black));
  }

  .pattern {
    background-color: transparent;
    opacity: 0.1;
    background-image: linear-gradient(#ffffff50 0.552px, transparent 0.552px),
      linear-gradient(to right, #ffffff50 0.552px, transparent 0.552px);
    background-size: 10px 10px;
  }

  .animate {
    opacity: 0;
  }

  .digital {
    &--text {
      text-shadow: var(--top-shadow);
      position: relative;

      @media (max-width: 380px) {
        &::before,
        &::after {
          display: none;
        }
      }

      &::before,
      &::after {
        content: attr(data-content);
        position: absolute;
        left: 0;
      }

      &::before {
        text-shadow: var(--left-shadow);
      }

      &::after {
        text-shadow: var(--bottom-shadow);
      }
    }

    &--box {
      box-shadow: var(--top-shadow);
      position: relative;

      &::before,
      &::after {
        content: '';
        display: block;
        position: absolute;
        inset: 0;
      }

      &::before {
        box-shadow: var(--left-shadow);
      }

      &::after {
        box-shadow: var(--bottom-shadow);
      }
    }

    &--animated {
      @media (min-width: 380px) {
        &::before,
        &::after {
          display: inline-block;
          animation: digital-animated 1.2s infinite linear alternate;
        }
      }
    }
  }

  /* Override Terms Hub Cookie Banner styles */
  .th-button {
    border-radius: var(--border-radius) !important;
    margin-bottom: 8px !important;
  }
</style>
